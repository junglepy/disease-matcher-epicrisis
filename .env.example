# OpenAI API Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=1000

# Service Configuration
PORT=8004
LOG_LEVEL=INFO
ARCHITECTURE=epicrisis_lirical

# Cache Configuration (optional)
ENABLE_CACHE=true
CACHE_TTL=3600

# LIRICAL Configuration
LIRICAL_SERVICE_URL=http://lirical:8083
LIRICAL_TIMEOUT=30

# Recursive Analysis
RECURSIVE_ANALYSIS_ENABLED=true
RECURSIVE_ITERATIONS=2
RECURSIVE_TOP_DISEASES=30

# HPO Filtering
HPO_FREQUENCY_THRESHOLD=0.1
MAX_HPO_PER_DISEASE=10
BATCH_SIZE=80

# Optional reranking (старый функционал для обратной совместимости)
EPICRISIS_RERANK_ENABLED=false
EPICRISIS_RERANK_TOP_K=20
EPICRISIS_RERANK_MIN_CANDIDATES=3

# Final Disease Reranking (optional)
FINAL_DISEASE_RERANK_ENABLED=true
FINAL_DISEASE_RERANK_MODEL=gpt-4o-mini
GENERATE_CLINICAL_NOTES=true
RERANK_TOP_K=10